<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Last Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark" />

    <EditText
        android:layout_width="200dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/info_firstname_textedit"
        android:id="@+id/info_lastname_textedit"
        android:background="@drawable/rounded_textfield"
        android:layout_height="30dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginEnd="45dp" />

    <TextView
        android:text="Street : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_lastname_textedit"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="15dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:text="Apt3/Suite# :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="15dp"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:text="City :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="State :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_centerVertical="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Zip Code :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="15dp"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:id="@+id/info_street_label"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignEnd="@+id/info_lastname_textedit"
        android:layout_alignStart="@+id/info_lastname_textedit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/info_street_label"
        android:id="@+id/info_apt_label"
        android:layout_alignEnd="@+id/info_street_label"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/info_apt_label"
        android:id="@+id/info_city_label"
        android:layout_alignEnd="@+id/info_apt_label"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignBottom="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/info_city_label"
        android:id="@+id/info_state_label"
        android:textSize="18sp"
        android:layout_alignEnd="@+id/info_city_label"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"
        android:layout_alignStart="@+id/info_state_label"
        android:id="@+id/info_zip_label"
        android:layout_alignEnd="@+id/info_state_label"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/info_zip_label"
        android:id="@+id/info_phone_label"
        android:layout_alignEnd="@+id/info_zip_label"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:text="Submit"
        android:id="@+id/info_submit_btn"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:background="@drawable/rounded_button"
        android:textAlignment="center"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_height="35dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:inputType="textPersonName"
        android:text="Name"
        android:id="@+id/info_firstname_textedit"
        android:layout_width="200dp"
        android:background="@drawable/rounded_textfield"
        android:layout_height="30dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="45dp" />

    <TextView
        android:text="First Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignBaseline="@+id/info_firstname_textedit"
        android:layout_alignBottom="@+id/info_firstname_textedit"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Primary Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView9"
        android:textSize="14sp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <Space
        android:layout_width="match_parent"
        android:layout_below="@+id/info_submit_btn"
        android:layout_height="30dp" />

</RelativeLayout>